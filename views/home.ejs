<!DOCTYPE html>
<html lang="Fa" dir="rtl">

<head>
    <%- include("./head.ejs") %>
</head>

<body>
    <%- include("./navbar.ejs") %>
        <div class="col-sm-12 col-md-10 col-lg-8 mx-auto mt-2">
            <% for( let index = 0; index < articles.length; index++ ) { %>
                <div dir="rtl" class="card" style="width: 100%">
                    <div class="d-flex justify-content-between m-3">
                        <div dir="rtl" style="width : 65%;">
                            <h5 class="card-title">
                                عنوان :
                                <%=articles[ index].title  %>
                            </h5>
                            <hr>
                            <p class="card-text">
                                نوشته شده توسط :
                                <%=articles[ index].author.firstName+"  "+articles[ index].author.lastName%>
                            </p>
                            <hr>
                            <h6 dir="rtl" class="card-subtitle mb-2 text-muted">
                                ثبت شده در تاریخ :
                                <%=articles[ index].createdAt.toLocaleDateString('fa-IR')  %>
                            </h6>
                            <hr>
                            <p dir="rtl" class="card-text" style="white-space: nowrap;width:90%; overflow: hidden;text-overflow: ellipsis;">
                                <%=articles[ index].content %>
                            </p>
                            <hr>
                            <div>
                                <div class="d-flex justify-content-between">
                                    <p>بازدید :
                                        <%=articles[index].visitCount %>
                                    </p>
                                    <p> پسندیده :
                                        <button type="button" class="btn btn-danger" id="likebutton"><%= articles[ index].like %> </button>
                                    </p>
                                    <p>ناپسندیده :
                                        <button type="button" class="btn btn-danger" id="dislikebutton"><%= articles[ index].dislike %> </button>
                                    </p>
                                </div>
                                <div class="readmore">
                                    <a class="btn btn-primary" href="blog/<%= articles[ index ]._id%>">مطالعه بیشتر</a>

                                </div>
                            </div>
                        </div>
                        <div style="width:35%" class="mr-2">
                            <image class="img-thumbnail" style="max-width:100%;" src="<%= articles[index].image %> "></image>
                        </div>
                    </div>


                </div>
                <br>

                <% } %>

        </div>




</body>

</html>